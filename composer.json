{
    "name": "kaliop/ezobjectwrapperbundle",
    "type": "symfony-bundle",
    "description": "Easy wrappers for your eZPublish 5 content/location objects",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Kaliop",
            "homepage": "http://www.kaliop.com/"
        }
    ],
    "require": {
        "php": ">=5.4",
        "ezsystems/ezpublish-kernel": ">=5.3|>=2014.03"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "symfony/phpunit-bridge": "*",
        "codeclimate/php-test-reporter": "~0.4",
        "kaliop/ezmigrationbundle": "^3.1.0"
    },
    "autoload": {
        "psr-4": {"Kaliop\\eZObjectWrapperBundle\\": "WrapperBundle"}
    },
    "_comment::travis": "the following section is needed to insure that eZPublish 5 can be built on travis, using the custom directory structure where it is not in the root folder",
    "extra": {
        "ezpublish-legacy-dir": "vendor/ezsystems/ezpublish-legacy"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/gggeek/BehatBundle"
        }
    ]
}
